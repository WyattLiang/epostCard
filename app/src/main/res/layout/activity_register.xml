<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/wel_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="e-PostCard"
        android:textSize="40sp"
        android:textColor="@color/welcomeColor"
        android:fontFamily="@font/mvboli"
        android:layout_alignParentLeft="true"/>

    <ProgressBar
        android:id="@+id/register_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wel_msg"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_textbox"
            android:ems="10"
            android:fontFamily="@font/mvboli"
            android:hint="Email"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/userN_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_textbox"
            android:ems="10"
            android:fontFamily="@font/mvboli"
            android:hint="User Name"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/firstN_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_textbox"
            android:ems="10"
            android:fontFamily="@font/mvboli"
            android:hint="First Name"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/lastN_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_textbox"
            android:ems="10"
            android:fontFamily="@font/mvboli"
            android:hint="Last Name"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/phone_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_textbox"
            android:ems="10"
            android:fontFamily="@font/mvboli"
            android:hint="Phone.No"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_textbox"
            android:ems="10"
            android:fontFamily="@font/mvboli"
            android:hint="Password"
            android:padding="10dp"
            android:textSize="20sp" />


        <Button
            android:id="@+id/Confirm_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_button"
            android:fontFamily="@font/mvboli"
            android:text="@string/register_Btn"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/back_toSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/mvboli"
            android:padding="5dp"
            android:text="Already have account?Click here to sign in"
            android:textAlignment="center"
            android:textSize="15sp" />


    </LinearLayout>



</RelativeLayout>