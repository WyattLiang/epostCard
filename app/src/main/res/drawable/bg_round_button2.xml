<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"/>

            <solid
                android:color="#604988B8" />

            <stroke
                android:color="#4DBDA9A9"
                android:width="2dp"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="20dp"/>

            <solid
                android:color="#4DBDA9A9"/>

            <stroke
                android:color="#05BDA9A9"
                android:width="2dp"/>
        </shape>

    </item>
</selector>